<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Библиотечные мероприятия</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryEvents.Web.styles.css" asp-append-version="true" />
    <!-- Подключение FullCalendar CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">

    <!-- Подключение jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            --primary-color: #6a11cb;
            --secondary-color: #2575fc;
            --light-bg: #f8fafc;
            --dark-text: #343a40;
            --card-shadow: 0 8px 30px rgba(0,0,0,0.12);
            --card-shadow-hover: 0 12px 40px rgba(0,0,0,0.15);
            --nav-height: 70px;
        }

        body {
            background-color: var(--light-bg);
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect fill="none" stroke="%23e2e8f0" stroke-width="0.5" x="0" y="0" width="100" height="100"/></svg>');
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: var(--nav-height);
            margin: 0; /* Убедимся, что нет лишних отступов */
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        /* Навигационная панель */
        .navbar {
            background: var(--primary-gradient);
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 0.5rem 1rem;
            height: var(--nav-height);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            color: white !important;
            display: flex;
            align-items: center;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: translateY(-2px);
            }

            .navbar-brand i {
                margin-right: 10px;
                font-size: 1.6rem;
            }

        .navbar-nav .nav-link {
            color: rgba(255,255,255,0.85) !important;
            font-weight: 500;
            padding: 0.5rem 1.2rem;
            margin: 0 0.2rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            position: relative;
            display: flex;
            align-items: center;
        }

            .navbar-nav .nav-link i {
                margin-right: 8px;
                font-size: 1.2rem;
                transition: transform 0.3s ease;
            }

            .navbar-nav .nav-link:hover {
                color: white !important;
                background: rgba(255,255,255,0.15);
            }

                .navbar-nav .nav-link:hover i {
                    transform: translateY(-2px);
                }

            .navbar-nav .nav-link.active {
                background: rgba(255,255,255,0.2);
                color: white !important;
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            }

            .navbar-nav .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 2px;
                background: white;
                transition: width 0.3s ease;
            }

            .navbar-nav .nav-link:hover::after {
                width: 60%;
            }

        .navbar-toggler {
            border: none;
            color: white !important;
            font-size: 1.5rem;
        }

        .user-greeting {
            color: white;
            font-weight: 500;
            margin-right: 15px;
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.1);
            cursor: pointer;
            position: relative;
        }

            .user-greeting:hover {
                background: rgba(255,255,255,0.2);
                transform: translateY(-2px);
            }

            .user-greeting i {
                margin-right: 8px;
                font-size: 1.2rem;
                transition: transform 0.3s ease;
            }

            .user-greeting:hover i {
                transform: scale(1.1);
            }

            .user-greeting::after {
                content: 'Мой кабинет';
                position: absolute;
                bottom: -25px;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0,0,0,0.7);
                color: white;
                padding: 3px 10px;
                border-radius: 4px;
                font-size: 0.8rem;
                opacity: 0;
                transition: opacity 0.3s ease;
                white-space: nowrap;
            }

            .user-greeting:hover::after {
                opacity: 1;
            }

        .btn-logout {
            background: rgba(255,255,255,0.15);
            border: none;
            border-radius: 50px;
            color: white;
            padding: 0.5rem 1.2rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

            .btn-logout:hover {
                background: rgba(255,255,255,0.25);
                transform: translateY(-2px);
            }

            .btn-logout i {
                margin-right: 8px;
                transition: transform 0.3s ease;
            }

            .btn-logout:hover i {
                transform: translateX(3px);
            }

        .btn-auth {
            background: rgba(255,255,255,0.15);
            border: none;
            border-radius: 50px;
            color: white;
            padding: 0.5rem 1.2rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            margin: 0 5px;
        }

            .btn-auth:hover {
                background: rgba(255,255,255,0.25);
                transform: translateY(-2px);
            }

            .btn-auth i {
                margin-right: 8px;
                transition: transform 0.3s ease;
            }

            .btn-auth:hover i {
                transform: scale(1.1);
            }

        /* Основное содержимое */
        .container {
            padding-top: 2rem;
            padding-bottom: 2rem;
            flex: 1; /* Занимает все доступное пространство */
        }

        /* Подвал */
        footer {
            background: var(--primary-gradient);
            color: rgba(255,255,255,0.85);
            padding: 1.5rem 0;
            margin-top: auto;
            box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
            width: 100%;
        }

        .footer-content {
            display: flex;
            justify-content: center; /* Центрируем текст */
            align-items: center;
        }

        /* Анимации */
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

            .animate-on-scroll.visible {
                opacity: 1;
                transform: translateY(0);
            }

        /* Адаптивность */
        @@media (max-width: 991px) {
            .navbar {
                height: auto;
                padding: 0.8rem 1rem;
            }

            .navbar-nav .nav-link {
                margin: 0.3rem 0;
                padding: 0.8rem 1rem;
            }

            .user-actions {
                margin-top: 1rem;
                padding-top: 1rem;
                border-top: 1px solid rgba(255,255,255,0.1);
                flex-direction: column;
                align-items: flex-start;
            }

            .user-greeting {
                margin: 0.5rem 0;
                width: 100%;
            }

            .btn-logout, .btn-auth {
                margin: 0.5rem 0;
                width: 100%;
            }

            .footer-content {
                text-align: center;
            }
        }

        @@media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.5rem;
            }

                .navbar-brand i {
                    font-size: 1.3rem;
                }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-journal-bookmark"></i>Библиотека
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <i class="bi bi-list"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i>Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Events" ? "active" : "")"
                               asp-controller="Events" asp-action="Index">
                                <i class="bi bi-calendar-event"></i>Афиша
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calendar" ? "active" : "")"
                               asp-controller="Calendar" asp-action="Index">
                                <i class="bi bi-calendar-check"></i>Календарь
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Help" ? "active" : "")"
                               asp-controller="Help" asp-action="Index">
                                <i class="bi bi-question-circle"></i>Справка
                            </a>
                        </li>
                    </ul>

                    <div class="user-actions d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="user-greeting" asp-controller="Registrations" asp-action="Index">
                                <i class="bi bi-person-circle"></i>Привет, @User.Identity.Name!
                            </a>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="btn-logout">
                                    <i class="bi bi-box-arrow-right"></i>Выйти
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn-auth" asp-area="Identity" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right"></i>Вход
                            </a>
                            <a class="btn-auth" asp-area="Identity" asp-page="/Account/Register">
                                <i class="bi bi-person-plus"></i>Регистрация
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div>
                    &copy; @DateTime.Now.Year - Библиотечные мероприятия
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Анимация появления элементов при скролле
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });

            // Анимация для навигации при скролле
            const navbar = document.querySelector('.navbar');
            let lastScrollY = window.scrollY;

            window.addEventListener('scroll', () => {
                if (lastScrollY < window.scrollY && window.scrollY > 50) {
                    // Прокрутка вниз
                    navbar.style.transform = 'translateY(-100%)';
                    navbar.style.transition = 'transform 0.3s ease';
                } else {
                    // Прокрутка вверх
                    navbar.style.transform = 'translateY(0)';
                }

                lastScrollY = window.scrollY;
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>